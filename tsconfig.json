{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "watch": false,
    "declaration": true,
    "declarationDir": "definitions",
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "@augurproject/core": [
        "packages/augur-core/source/index.ts"
      ],
      "@augurproject/node": [
        "packages/augur-node/src/index.ts"
      ],
      "@augurproject/contract-sdk": [
        "packages/augur-contract-sdk"
      ],
      "@augurproject/tools": [
        "packages/augur-tools"
      ],
      "@augurproject/types": [
        "packages/augur-types"
      ],
      "augur.js": [
        "packages/augur.js"
      ]
    }
  },
  "include": [
    "node_modules/@types",
    "node_modules/augur-types"
  ]
}


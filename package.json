{
  "name": "augur",
  "version": "1.0.0-alpha.9",
  "description": "Augur Desktop Application",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron-forge start .src/main/main.js",
    "debug": "electron-forge start  --inspect-electron .src/main/main.js",
    "package": "electron-forge package",
    "publish": "electron-forge publish",
    "make": "electron-builder make --publish always",
    "make-win": "electron-builder make --win",
    "make-mac": "electron-builder make --mac",
    "make-linux": "electron-builder make --linux",
    "make-all": "electron-builder make -mwl"
  },
  "repository": "https://github.com/AugurProject/augur-app",
  "keywords": [
    "Augur",
    "Desktop",
    "Electron",
    "App",
    "Application"
  ],
  "author": "The Augur Developers <team@augur.net>",
  "license": "MIT",
  "build": {
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icon.png"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.png"
    },
    "linux": {
      "target": [
        "deb",
        "snap"
      ],
      "icon": "build/icon.png"
    },
    "artifactName": "${os}-${productName}-${version}.${ext}",
    "publish": {
      "provider": "s3",
      "bucket": "augur-app-releases",
      "path": "${version}"
    },
    "publish": {
      "provider": "github"
    }
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-deb",
          "platforms": [
            "linux"
          ],
          "config": {
              "icon": "build/icon.png"
          }
        }
      ]
    }
  },
  "dependencies": {
    "app-data-folder": "1.0.0",
    "augur-core": "1.0.0-16",
    "augur-node": "0.2.16",
    "augur-ui": "3.39.1",
    "augur.js": "4.12.0-15",
    "electron-compile": "6.4.2",
    "electron-log": "^2.2.16",
    "express": "4.16.2",
    "knex": "0.14.6",
    "node-pre-gyp": "~0.6.38",
    "opn": "5.3.0",
    "sqlite3": "^3.1.13"
  },
  "devDependencies": {
    "electron": "2.0.0",
    "electron-builder": "^20.15.1",
    "electron-builder-squirrel-windows": "^20.15.0",
    "electron-forge": "5.2.0",
    "electron-prebuilt-compile": "2.0.0",
    "electron-publisher-s3": "^20.15.0"
  }
}
